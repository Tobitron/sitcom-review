<%= form_for(@sitcom) do |f| %>
  <% if @sitcom.errors.present? %>
    <% @sitcom.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

  <%= f.text_field :name %>
  <%= f.text_area :description %>
  <%= f.select :start_year, (1900..Time.now.year).to_a.reverse %>
  <%= f.select :end_year, (1900..Time.now.year).to_a.reverse, include_blank: true%>
  <%= f.text_field :genre %>
  <%= f.text_field :network %>
  <%= f.submit %>
<% end %>
