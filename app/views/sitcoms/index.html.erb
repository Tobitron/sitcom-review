          </li>
          <li>
            <div id="foto">
              <%= link_to('https://www.linkedin.com/in/tobiaskahn') do %>
                <%= image_tag('/assets/toby-pic.jpg', alt: 'Tobias Kahn') %>
              <% end %>
            </div>
          </li>
          <li>
            <div id="foto">
              <%= link_to('https://www.linkedin.com/in/roccobasso') do %>
                <%= image_tag('/assets/rocco-pic.png', alt: 'Rocco Basso') %>
              <% end %>
            </div>
          </li>
          <li>
            <div id="foto">
              <%= link_to('https://www.linkedin.com/in/kylelreeves') do %>
                <%= image_tag('/assets/kyle-pic.jpg', alt: 'Kyle Reeves') %>
              <% end %>
